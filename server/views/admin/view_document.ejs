<%- include ../partials/header.ejs %>

<div class="pdfview-layout">
<header class="grid-header">
    <div class="container">
        <div class="row prompt-card w-100 mt-4">
            <div class="col-8 vertical-line  align-items-center">
                <div class="d-flex flex-column">
                    <p class="m-0"><span class="fw-sb">Name:</span> <em><%= metadata.fullName %></em></p>
                    <p class="m-0"><span class="fw-sb">Title:</span> <em><%= metadata.title %></em></p>
                    <p class="m-0"><span class="fw-sb">Description:</span> <em><%= metadata.description %></em></p>
                </div>
            </div>
            <div class="col-4 d-flex flex-column align-items-center">
                <a href="/admin/document/approve/<%= metadata.id %>" class="btn btn-success w-25 m-1">Approve</a>
                <a href="/admin/document/reject/<%= metadata.id %>" class="btn btn-danger w-25 m-1">Reject</a>
            </div>
        </div>
    </div>
</header>
<main class="grid-main">
    <iframe type="application/pdf" width="100%" height="100%" src="<%= metadata.pdfUrl %>"></iframe>
</main>
</div>
<%- include ../partials/footer.ejs %>